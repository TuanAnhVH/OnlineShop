@model List<OnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{

    <script src="/Assets/Client/js/Controler/CartControler2.js"></script>

}
<table class="table">
    <thead>
        <tr>
            <td>Mã SP</td>
            <td>Tên SP</td>
            <td>Ảnh SP</td>
            <td>Số lượng</td>
            <td>Đơn giá</td>
            <td>Thành tiền</td>
            <td>#</td>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Code</td>
                <td>@item.Product.Name</td>
                <td><img src="@item.Product.Image" alt="@item.Product.Name " width="100" height="100" /></td>
                <td><input type="text" name="name" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                <td>@((item.Quantity * item.Product.Price.GetValueOrDefault(0)).ToString("N0"))</td>
                <td><button data-id="@item.Product.ID" class="btnDelete btn-danger">Xóa</button></td>
            </tr>
        }


    </tbody>

</table>
<button id="btnContinue" class="btn btn-primary">Tiếp tục mua hàng</button>
<button id="btnUpdate" class="btn btn-primary">Cập nhật giỏ hàng</button>
<button id="btnDeleteAll" class="btn btn-primary">Xóa giỏ hàng</button>
<button id="btnPayment" class="btn btn-danger">Thanh toán</button>

